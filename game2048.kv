#:kivy 1.7.2
#:import rgb kivy.utils.get_color_from_hex

<BoxButton@ButtonBehavior+BoxLayout>:
	source: ''
	orientation: 'vertical'
	padding: '8dp'
	canvas.before:
		Color:
			rgb: 0xbb / 255., 0xad / 255., 0xa0 / 255.
		BorderImage:
			pos: self.pos
			size: self.size
			source: 'data/round.png'

	Image:
		source: root.source

<TextButton@Button>:
	color: 1,1,1,1
	background_color: 60/255., 60/255., 60/255.,1
	background_normal: 'data/square2.png'
	background_down: 'data/square2.png'
	size_hint_y: None
	height: '48dp'
	font_size: '20dp'
	bold: True

<Number>:
	canvas.before:
		PushMatrix
		Translate:
			xy: self.center_x, self.center_y
		Scale:
			xyz: root.scale, root.scale, 0
		Translate:
			xy: -self.center_x, -self.center_y
	canvas.after:
		PopMatrix
			
	canvas:
		Color:
			rgb: self.colors.get(self.number, self.colors.get(2))
		BorderImage:
			pos: self.pos
			size: self.size
			source: 'data/square2.png'

	Label:
		text: str(root.number)
		font_size: min(self.height, self.width) / 2.5
		color: rgb('#ffffff')
		bold: True
		size: root.size
		center: root.center

<LevelButton>:
	canvas.before:
		PushMatrix
		Translate:
			xy: self.center_x, self.center_y
		Scale:
			xyz: root.scale, root.scale, 0
		Translate:
			xy: -self.center_x, -self.center_y
	canvas.after:
		PopMatrix
			
	canvas:
		Color:
			rgb: rgb(self.color)
		BorderImage:
			pos: self.pos
			size: self.size
			source: 'data/square2.png'

	Label:
		text: str(root.number)
		font_size: min(self.height, self.width) / 2.5
		color: rgb('#ffffff')
		bold: True
		size: root.size
		center: root.center


BoxLayout:
	padding: '0dp'
	spacing: '5dp'
	orientation: 'vertical' if self.height > self.width else 'horizontal'
	canvas:
		Color:
			rgb: 1,1,1
		Rectangle:
			pos: self.pos
			size: self.size

	BoxLayout:
		orientation: 'vertical' if root.height > root.width else 'horizontal'
		size_hint_y: .25 if root.height > root.width else 1

		BoxLayout:
			spacing: '2dp'
			padding: '2dp'
			canvas.before:
				Color: 
					rgb: 230/255., 230/255., 230/255.
				BorderImage:
					pos: self.pos
					size: self.size
					source: 'data/square2.png'
			orientation: 'vertical' #if root.height > root.width else 'horizontal'

			Label:
				text: 'BINARY WORLD'
				font_size: self.width/10 if root.width > root.height else root.width/17
				color: 0,0,0,1
				halign: 'right'
				bold: True
				size: self.width, root.width/20+10

			BoxLayout:
				orientation: 'horizontal' if root.height > root.width else 'vertical'
				spacing: '2dp'

				BoxLayout:
					orientation: 'vertical'
					size: self.width, '40dp'
					canvas.before:
						Color:
							rgb: 55/255.,152/255.,143/255.
						BorderImage:
							pos: self.pos
							size: self.size
							source: 'data/square2.png'

					Label:
						text: 'SCORE'
						color: 1,1,1,1
						font_size: self.height / 1.5
						size_hint_y: .5
						bold: True
					Label:
						text: str(game.score)
						font_size: self.height / 1.5
						bold: True
				BoxLayout:
					orientation: 'vertical'
					canvas.before:
						Color:
							rgb: 60/255., 60/255., 60/255.
						BorderImage:
							pos: self.pos
							size: self.size
							source: 'data/square2.png'

					Label:
						text: 'MOVES'
						color: 0xee / 255., 0xe4 / 255., 0xda / 255., 1.
						font_size: self.height / 1.5
						size_hint_y: .5
						bold: True
					Label:
						text: str(game.moves)
						font_size: self.height / 1.5
						bold: True

				BoxLayout:
					orientation: 'vertical'
					canvas.before:
						Color:
							rgb: 255/255., 111/255., 51/255.
						BorderImage:
							pos: self.pos
							size: self.size
							source: 'data/square2.png'

					Label:
						text: 'SECONDS'
						color: 0xee / 255., 0xe4 / 255., 0xda / 255., 1.
						font_size: self.height / 1.5
						size_hint_y: .5
						bold: True
					Label:
						text: str(game.mytime)
						font_size: self.height / 1.5
						bold: True


				BoxLayout:
					id: scoring
					spacing: '10dp'
					BoxButton:
						source: 'data/icon-leaderboard.png'
						on_press: app.gs_show_leaderboard()
					BoxButton:
						source: 'data/icon-achievements.png'
						on_press: app.gs_show_achievements()
			AnchorLayout:
				orientation: 'vertical'
				padding_bottom: '20dp'
				anchor_x: 'left'
				Label:
					text: str(game.level_info)
					font_size: '15dp' if root.height > root.width else '20dp'
					color: 0,0,0,1
					bold: True


	AnchorLayout:
		id: anchor

		Game2048:
			id: game
			size_hint: None, None
			size: [min(anchor.width, anchor.height)] * 2
			on_size: self.reposition()
			on_pos: self.reposition()


<Game2048>:
	AnchorLayout:
		id: levelspane
		pos: root.pos
		size: root.size
		opacity: 0

		canvas:
			Color: 
				rgb: 1,1,1,1
			BorderImage:
				pos: self.pos
				size: self.size
				source: 'data/square2.png'
		GridLayout:
			id: levelsgrid
			cols: 5
			spacing: '2dp'

	AnchorLayout:
		id: end
		pos: root.pos
		size: root.size
		opacity: 0

		canvas:
			Color:
				rgb: 1,1,1,1
			BorderImage:
				pos: self.pos
				size: self.size
				source: 'data/square2.png'

		BoxLayout:

			orientation: 'vertical'
			padding: '10dp'
			spacing: '20dp'

			Label:
				id: end_label
				font_size: min(self.height, self.width) / 3.
				color: 0,0,0,1
				text: 'Game\nover!'
				halign: 'center'

			TextButton:
				text: 'Restart'
				on_press: root.restart() if end.opacity == 1. else None
				font_size: '20dp'

			TextButton:
				id: next_level_button
				text: 'Next Level'
				on_press: root.next_level() if next_level_button.opacity == 1 and end.opacity == 1 else None
				font_size: '20dp'
			
			TextButton:
				id: level_selector_button
				text: 'All Levels'
				on_press: root.all_levels() if end.opacity == 1 else None
				font_size: '20dp'

	

# still using 1.7.2 for android, and i want the title color
# ModalView widget
<-Popup>:
    _container: container
    canvas:
        Color:
            rgba: root.background_color[:3] + [root.background_color[-1] * self._anim_alpha]
        Rectangle:
            size: self._window.size if self._window else (0, 0)

        Color:
            rgb: 1, 1, 1
        BorderImage:
            source: root.background
            border: root.border
            pos: self.pos
            size: self.size
    GridLayout:
        padding: 5
        cols: 1
        size_hint: None, None
        pos: root.pos
        size: root.size

        Label:
            text: root.title
			color: 0x77 / 255., 0x6e / 255., 0x65 / 255., 1.
            size_hint_y: None
            height: self.texture_size[1] + 16
            text_size: self.width - 16, None
            font_size: root.title_size

        Widget:
            size_hint_y: None
            height: 4
            canvas:
                Color:
                    rgba: root.separator_color
                Rectangle:
                    pos: self.x, self.y + root.separator_height / 2.
                    size: self.width, root.separator_height

        BoxLayout:
            id: container


<GooglePlayPopup>:
	size_hint: None, None
	title: 'Connect to Google Play'
	size: '300dp', '300dp'
	background: 'data/popup.png'
	separate_color: 0x77 / 255., 0x6e / 255., 0x65 / 255., 1.
	title_size: '20sp'

	BoxLayout:

		orientation: 'vertical'
		spacing: '10dp'
		padding: '10dp'

		Label:
			font_size: '20sp'
			color: 0x77 / 255., 0x6e / 255., 0x65 / 255., 1.
			bold: True
			text: 'Do you want to connect to Google Play for the Leaderboard and Achievements ?'
			text_size: self.width - dp(20), None
			halign: 'center'

		BoxLayout:
			size_hint_y: None
			height: '68dp'
			spacing: '10dp'
			TextButton:
				text: 'No'
				on_press: root.dismiss()

			TextButton:
				text: 'Yes'
				on_press: app.activate_google_play(); root.dismiss()
